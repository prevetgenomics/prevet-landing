    <section>  
    </section>
    
	<!-- Q&A -->
    <Section currentColor="bg-accent">
		<div class="flex justify-center">
			<h1 class="text-black">
				Q&A
			</h1>
		</div>
		<div class="flex flex-col py-4 mx-auto">
			<QAItem
				className="border-t-1"
				question="Pregunta desde el puesto del veterinario"
				answer="Una respuesta elavorada"
			/>
